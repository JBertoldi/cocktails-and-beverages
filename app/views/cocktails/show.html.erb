<div class='container-big'>
  <div class='container my-5'>
    <h2><%= @cocktail.name %></h2>
     <% if @cocktail.virgin %>
        <small><span class="badge badge-pill badge-info mx-3">Virgin</span></small>
      <% end %>
    <div class="d-flex justify-content-between">
      <div>
        <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill, class: 'mt-4 mb-5 rounded' %> 
      </div>
      <div>
        <% if notice.present? %>
          <%= notice.html_safe %>
        <% end %>
          <h4 class='my-3 mx-3'>Ingredients</h4>
          <div class='container-sm my-3'>
            <ul>
              <% @cocktail.doses.each do |dose| %>
                <li>
                  <%= dose.measurement %> <%= dose.ingredient.name %>
                  <%= link_to dose_destroy_path(dose), method: :delete do %>
                <small><i class='fa fa-minus mx-6 text-info'></i></small>
                <% end %>
                </li>
              <% end %>
            </ul>

            <%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail), class: 'btn btn-outline-dark' %>
            <%= link_to 'Go Back', cocktails_path, class: 'btn btn-outline-dark' %>
          </div>
      </div>
    </div>
    <%= @cocktail.description %>
  </div>
</div>
